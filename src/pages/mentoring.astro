---
import Base from "@/layouts/Base.astro";
import HeroVariant from "../components/sections/HeroVariant.astro";
import CardsSection from "../components/sections/CardsSection.astro";
import { mentoringPageData } from "../config/mentoring";

// Transform mentoring programs data for CardsSection
const cardsData = mentoringPageData.programs.items.map((program) => ({
    title: program.title,
    description: program.description,
    icon: program.icon,
    tags: program.tags,
    metadata: [
        { label: "Dauer", value: program.duration },
        { label: "Alter", value: program.age },
    ],
}));
---

<Base>
    <!-- Hero Section using modular component -->
    <HeroVariant
        title={mentoringPageData.hero.title}
        subtitle={mentoringPageData.hero.subtitle}
        background={mentoringPageData.hero.background}
        variant="card"
        minHeight="40vh"
    />

    <!-- Mentoring Programs Grid -->
    <CardsSection
        cards={cardsData}
        background={mentoringPageData.programs.background}
        columns={3}
    />
</Base>
