---
import Base from "@/layouts/Base.astro";

const partners = [
  { src: "/partners/partner1.png", alt: "Partner 1" },
  { src: "/partners/partner2.png", alt: "Partner 2" },
  { src: "/partners/partner3.png", alt: "Partner 3" },
  { src: "/partners/partner4.png", alt: "Partner 4" },
  { src: "/partners/partner5.png", alt: "Partner 5" },
  { src: "/partners/partner6.png", alt: "Partner 6" },
  { src: "/partners/partner7.png", alt: "Partner 7" },
  { src: "/partners/partner8.png", alt: "Partner 8" },
  { src: "/partners/partner9.png", alt: "Partner 9" },
];
---

<Base>
  <!-- Hero Section -->
  <section
    class="relative flex min-h-[70vh] items-center justify-center bg-gradient-to-br from-orange-100 via-white to-orange-200 dark:from-[#23212b] dark:via-[#2d2a38] dark:to-[#463d5c] px-4"
  >
    <div
      class="relative z-10 mx-auto flex w-full max-w-6xl flex-col items-center justify-center gap-8"
    >
      <!-- Banner -->
      <div class="flex flex-col items-center w-full">
        <div
          class="flex flex-col items-center w-full max-w-2xl rounded-[2.5rem] bg-orange-400/95 shadow-2xl shadow-orange-300/40 px-8 py-6 animate-fade-in-up"
        >
          <h1
            class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-white drop-shadow-lg text-center mb-2 tracking-tight"
          >
            CoderDojo Sch√∂neweide
          </h1>
          <p
            class="text-lg md:text-xl font-semibold text-orange-100 text-center mb-2 tracking-wide"
          >
            Inspirierende IT-Workshops f√ºr Kinder und Jugendliche
          </p>
        </div>
        <!-- Buttons Row -->
        <div class="flex gap-4 mt-6 flex-wrap justify-center">
          <a
            href="https://pretix.eu/dojosw/"
            target="_blank"
            rel="noopener"
            class="btn-primary"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 text-orange-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <rect
                x="3"
                y="7"
                width="18"
                height="13"
                rx="2"
                fill="none"
                stroke="currentColor"
                stroke-width="2"></rect>
              <path
                d="M16 3v4M8 3v4"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"></path>
            </svg>
            Ticket buchen
          </a>
          <a href="/spenden" class="btn-secondary"> Spenden </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Workshops Section -->
  <section
    class="bg-[#463d5c] dark:bg-[#23212b] px-4 py-16 md:px-8 lg:px-16 transition-colors"
  >
    <div
      class="mx-auto flex max-w-6xl flex-col items-center gap-12 md:flex-row"
    >
      <!-- Left Column -->
      <div class="flex flex-1 flex-col items-start">
        <h2 class="mb-8 text-4xl font-bold text-white md:text-5xl">
          Workshops
        </h2>
        <a
          href="https://pretix.eu/dojosw/"
          target="_blank"
          rel="noopener"
          class="btn-primary mb-8"
        >
          <svg
            class="mr-2 h-7 w-7"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><rect
              x="3"
              y="7"
              width="18"
              height="10"
              rx="2"
              stroke-width="2"
              stroke="currentColor"
              fill="none"></rect><path
              d="M7 7V5a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2"
              stroke-width="2"
              stroke="currentColor"
              fill="none"></path></svg
          >
          Ticket buchen
        </a>
        <div class="mb-8 flex flex-col gap-4 sm:flex-row">
          <a href="/workshops" class="btn-outline">Mehr Infos</a>
          <a href="/workshops" class="btn-outline">Alle Workshops</a>
        </div>
        <p class="mb-2 text-lg text-white">
          Kostenlose Workshops im Bereich Informatik/Technik
        </p>
        <p class="mb-2 text-lg text-white">
          Wann: Jeden zweiten Samstag von 11-13 Uhr<br />Wo: In der <a
            href="#"
            class="text-blue-200 underline"
            >Mittelpunktbibliothek "Alte Feuerwache"</a
          >
        </p>
        <p class="mb-2 text-lg text-white">
          F√ºr Kinder und Jugendliche zwischen 7-17 Jahren
        </p>
        <p class="mb-2 text-lg text-white">Kein Vorwissen n√∂tig!</p>
        <p class="mb-8 text-lg text-white">
          Du m√∂chtest √ºber aktuelle Workshops informiert werden?<br />Melde Dich
          f√ºr den eMail-Newsletter an!
        </p>
        <a href="/newsletter" class="btn-primary">
          <svg
            class="mr-2 h-7 w-7"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><rect
              x="3"
              y="7"
              width="18"
              height="10"
              rx="2"
              stroke-width="2"
              stroke="currentColor"
              fill="none"></rect><path
              d="M7 7V5a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2"
              stroke-width="2"
              stroke="currentColor"
              fill="none"></path></svg
          >
          Newsletter abonnieren
        </a>
      </div>
      <!-- Right Column -->
      <div class="mt-8 flex flex-1 items-center justify-center md:mt-0">
        <div
          class="relative h-64 w-64 rounded-3xl bg-gradient-to-br from-orange-100 via-white to-orange-200 dark:from-[#463d5c] dark:via-[#23212b] dark:to-[#2d2a38] shadow-xl"
        >
        </div>
      </div>
    </div>
  </section>

  <!-- Mentoring Section -->
  <section
    class="bg-[#a5c7c0] dark:bg-[#2d2a38] px-4 py-16 md:px-8 lg:px-16 transition-colors"
  >
    <div
      class="mx-auto flex max-w-6xl flex-col items-center gap-12 md:flex-row"
    >
      <!-- Left: Graphic -->
      <div class="mb-8 flex flex-1 items-center justify-center md:mb-0">
        <div
          class="h-48 w-80 rounded-3xl bg-gradient-to-br from-orange-100 via-white to-orange-200 dark:from-[#463d5c] dark:via-[#23212b] dark:to-[#2d2a38] shadow-xl flex items-center justify-center"
        >
          <span class="text-6xl text-orange-400 dark:text-orange-300">ü§ù</span>
        </div>
      </div>
      <!-- Right: Content -->
      <div class="flex flex-1 flex-col items-start">
        <h2
          class="mb-8 text-4xl font-bold text-gray-800 dark:text-white md:text-5xl"
        >
          Mentoring
        </h2>
        <div class="mb-8 flex flex-col gap-4 sm:flex-row">
          <a href="/mentoring" class="btn-primary">
            <svg
              class="mr-2 h-7 w-7"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              ><path
                d="M21 8V6a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2"
                stroke-width="2"
                stroke="currentColor"
                fill="none"></path><rect
                x="3"
                y="8"
                width="18"
                height="10"
                rx="2"
                stroke-width="2"
                stroke="currentColor"
                fill="none"></rect><path
                d="M3 8l9 6 9-6"
                stroke-width="2"
                stroke="currentColor"
                fill="none"></path></svg
            >
            Mehr Infos
          </a>
        </div>
        <p class="mb-4 text-lg text-gray-800 dark:text-gray-200">
          Du m√∂chtest ehrenamtlich bei uns mitmachen?<br />Sehr cool! Schreib
          uns eine Mail an<br /><span class="break-all"
            >hallo@coderdojo-schoeneweide.de</span
          >
        </p>
        <p class="mb-2 text-lg text-gray-800 dark:text-gray-200">
          Was dich erwartet:
        </p>
        <ul
          class="mb-2 list-inside list-disc space-y-1 text-lg text-gray-800 dark:text-gray-200"
        >
          <li>Wissen weitergeben / Gemeinschaft gestalten</li>
          <li>Team mit Freude und Engagement</li>
          <li>Eigene Ideen zum Thema Bildung einbringen</li>
        </ul>
      </div>
    </div>
  </section>

  <!-- Verein Section -->
  <section
    class="bg-[#463d5c] dark:bg-[#23212b] px-4 py-16 md:px-8 lg:px-16 transition-colors"
  >
    <div
      class="mx-auto flex max-w-6xl flex-col items-center gap-12 md:flex-row"
    >
      <!-- Left: Content -->
      <div class="flex flex-1 flex-col items-start">
        <h2 class="mb-8 text-4xl font-bold text-white md:text-5xl">Verein</h2>
        <p class="mb-4 text-lg text-white">
          Das CoderDojo Sch√∂neweide ist ein eingetragener,<br />gemeinn√ºtziger
          Verein.
        </p>
        <p class="mb-2 text-lg text-white">
          Du m√∂chtest Mitglied werden?<br />Infos dazu findest Du im ‚Üí <a
            href="/mentoring"
            class="text-blue-200 underline">Abschnitt "Mentoring"</a
          >
        </p>
        <p class="mb-8 text-lg text-white">
          Du m√∂chtest uns mit einer Spende unterst√ºtzen oder F√∂rdermitglied
          werden?<br />Infos zu Spenden...
        </p>
        <a href="/spenden" class="btn-primary mb-8"
          >Unterst√ºtze uns durch eine Spende</a
        >
        <h3 class="mb-4 text-2xl font-bold text-white md:text-3xl">
          Vereinsdokumente
        </h3>
        <div class="flex flex-col gap-4 sm:flex-row">
          <a href="/satzung" class="btn-outline">Satzung</a>
          <a href="/jahresberichte" class="btn-outline">Jahresberichte</a>
        </div>
      </div>
      <!-- Right: Graphic -->
      <div class="mt-8 flex flex-1 items-center justify-center md:mt-0">
        <div
          class="h-64 w-80 rounded-3xl bg-gradient-to-br from-orange-100 via-white to-orange-200 dark:from-[#463d5c] dark:via-[#23212b] dark:to-[#2d2a38] shadow-xl flex items-center justify-center"
        >
          <span class="text-6xl text-orange-400 dark:text-orange-300">ü§ó</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Kooperationen Section -->
  <section
    class="bg-[#a5c7c0] dark:bg-[#2d2a38] px-4 py-16 md:px-8 lg:px-16 transition-colors"
  >
    <div class="mx-auto flex max-w-6xl flex-col gap-12 md:flex-row">
      <!-- Left: Info -->
      <div class="mb-8 flex flex-1 flex-col items-start justify-start md:mb-0">
        <h2
          class="mb-8 text-4xl font-bold text-gray-800 dark:text-white md:text-5xl"
        >
          Kooperationen
        </h2>
        <p class="mb-4 text-lg text-gray-800 dark:text-gray-200">
          Sie sind bei einer Schule oder einer anderen<br />Bildungseinrichtung
          und wollen mit uns kooperieren?
        </p>
        <p class="mb-4 text-lg text-gray-800 dark:text-gray-200">
          Schreiben Sie uns eine Mail an <a
            href="mailto:hallo@coderdojo-schoeneweide.de"
            class="text-blue-700 underline dark:text-blue-300"
            >hallo@coderdojo-schoeneweide.de</a
          ><br />oder f√ºllen Sie unser <a
            href="/kontakt"
            class="text-blue-700 underline dark:text-blue-300"
            >Kontaktformular</a
          > aus.
        </p>
        <p class="mb-4 text-lg text-gray-800 dark:text-gray-200">
          Sie m√∂chten wissen, was genau wir anbieten?<br />Sehen Sie unsere <a
            href="/workshops"
            class="text-blue-700 underline dark:text-blue-300"
            >Workshop Konzepte</a
          >
        </p>
      </div>
      <!-- Right: Partner Logos -->
      <div class="flex flex-1 flex-col items-center">
        <h3
          class="mb-8 text-2xl font-semibold text-gray-800 dark:text-white md:text-3xl"
        >
          Unsere Partner
        </h3>
        <div class="grid w-full grid-cols-2 gap-6 md:grid-cols-3">
          {
            partners.map((partner) => (
              <div class="flex items-center justify-center bg-white/80 dark:bg-[#23212b] rounded-xl shadow p-3 transition hover:scale-105">
                <img
                  src={partner.src}
                  alt={partner.alt}
                  class="max-h-12 w-auto object-contain"
                  loading="lazy"
                />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</Base>

<style>
  @keyframes fade-in-up {
    0% {
      opacity: 0;
      transform: translateY(32px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fade-in-up 0.9s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .btn-primary {
    @apply flex items-center gap-2 rounded-xl bg-orange-400 px-6 py-3 font-bold text-white shadow-lg shadow-orange-200/60 hover:bg-orange-500 transition-all duration-200 scale-100 hover:scale-105 animate-fade-in-up;
    box-shadow: 0 6px 32px 0 rgba(255, 153, 51, 0.18);
  }
  .btn-secondary {
    @apply flex items-center gap-2 rounded-xl bg-white/90 px-6 py-3 font-bold text-orange-500 shadow-lg shadow-orange-200/60 hover:bg-orange-100 transition-all duration-200 scale-100 hover:scale-105 animate-fade-in-up;
    box-shadow: 0 6px 32px 0 rgba(255, 153, 51, 0.18);
  }
  .btn-outline {
    @apply flex items-center gap-2 rounded-xl border-2 border-orange-400 bg-transparent px-6 py-3 font-bold text-orange-400 shadow hover:bg-orange-50 hover:text-orange-500 transition-all duration-200 scale-100 hover:scale-105 animate-fade-in-up;
  }
  section {
    @apply w-full;
  }
</style>
