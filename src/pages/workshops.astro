const categories = [...new Set(workshops.map(workshop => workshop.category))];
---

<Base>
  <!-- Modern Hero Section -->
  <section class="relative flex items-center justify-center min-h-[40vh] bg-gradient-to-br from-orange-100 via-white to-orange-200 px-4 py-20">
    <div class="relative z-10 w-full max-w-2xl mx-auto text-center bg-white/80 dark:bg-[#222222cc] rounded-3xl shadow-xl px-8 py-12 backdrop-blur-md">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">Unsere Workshops</h1>
      <p class="text-lg md:text-xl text-gray-700 dark:text-gray-200 mb-8">Entdecke die Welt der Programmierung und Technik in unseren interaktiven Workshops</p>
      <div class="flex flex-wrap justify-center gap-3">
        {categories.map((category) => (
          <button class="px-5 py-2 border-2 border-orange-400 text-orange-400 bg-white/60 dark:bg-[#222222cc] rounded-full font-medium hover:bg-orange-400 hover:text-white transition-all duration-200 shadow-sm">
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Workshops Grid Section -->
  <section class="py-24 px-4 md:px-8 lg:px-16 bg-[#463d5c]">
    <div class="max-w-3xl mx-auto flex flex-col gap-10">
      {workshops.map((workshop) => (
        <a href={workshop.link} class="group block">
          <div class="flex flex-row items-center bg-gray-100 dark:bg-gray-800 rounded-3xl shadow-xl overflow-hidden transition-all duration-300 group-hover:shadow-orange-400/40 p-6 gap-8">
            <div class="flex-shrink-0 w-40 h-40 rounded-2xl overflow-hidden bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
              <img
                src={workshop.image}
                alt={workshop.title}
                class="object-cover w-full h-full"
                loading="lazy"
              />
            </div>
            <div class="flex-1 flex flex-col justify-center min-w-0">
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">{workshop.title}</h3>
              <p class="text-gray-700 dark:text-gray-200 mb-4 truncate">{workshop.description}</p>
              <div class="flex flex-col gap-2 mb-2">
                <div class="flex items-center text-gray-800 dark:text-gray-100 text-base">
                  <svg class="w-5 h-5 mr-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                  {workshop.duration}
                </div>
                <div class="flex items-center text-gray-800 dark:text-gray-100 text-base">
                  <svg class="w-5 h-5 mr-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a4 4 0 00-3-3.87M9 20H4v-2a4 4 0 013-3.87m9-5a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
                  {workshop.age}
                </div>
              </div>
              {workshop.tags && workshop.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-2">
                  {workshop.tags.map((tag) => (
                    <span class="bg-white dark:bg-gray-700 text-gray-900 dark:text-white px-3 py-1 rounded-full shadow text-xs font-medium border border-gray-200 dark:border-gray-700">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
</Base>

<style>
  section {
    @apply w-full;
