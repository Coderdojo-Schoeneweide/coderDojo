---
// Workshops Page - Content-driven with actual workshop data + React Islands
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import WorkshopGridIsland from "../components/islands/WorkshopGridIsland.jsx";
import { siteContent } from "../content";
import { getWorkshops } from "../utils/workshops";

const { workshops: workshopPage } = siteContent.pages;
const workshops = getWorkshops();
---

<Layout title="Workshops - CoderDojo SchÃ¶neweide">
  <!-- Modern Hero Section -->
  <section
    class="relative flex min-h-[40vh] items-center justify-center bg-gradient-to-br from-primary-50 via-white to-primary-100 px-4 py-20 dark:from-slate-800 dark:via-slate-900 dark:to-slate-800"
  >
    <div
      class="relative z-10 mx-auto w-full max-w-2xl rounded-3xl bg-white/80 px-8 py-12 text-center shadow-xl backdrop-blur-md dark:bg-slate-800/80"
    >
      <h1
        class="mb-4 text-4xl font-bold text-slate-900 dark:text-white md:text-5xl"
      >
        {workshopPage.hero.title}
      </h1>
      <p class="mb-8 text-lg text-slate-700 dark:text-slate-200 md:text-xl">
        {workshopPage.hero.subtitle}
      </p>
      <div class="space-y-2">
        {
          workshopPage.hero.content.map((line) => (
            <p class="text-slate-600 dark:text-slate-300">{line}</p>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Workshops Grid Section with Islands -->
  <section class="bg-primary-700 px-4 py-24 md:px-8 lg:px-16">
    <div class="mx-auto flex max-w-6xl flex-col gap-5">
      <WorkshopGridIsland client:load workshops={workshops} />
    </div>
  </section>
</Layout>
