---
import { getBackgroundClasses, getTextClasses } from "@/utils/theme";

// Use modern theme system
const footerBg = getBackgroundClasses("footer");
const textClasses = getTextClasses("white");
const accentColor = "text-orange-300";
const borderColor = "border-[#6c6480]";
---

<footer class={`${footerBg} pb-4 pt-10 ${textClasses}`}>
  <div
    class="container mx-auto flex flex-col justify-between gap-8 px-4 md:flex-row"
  >
    <!-- Left: Site Info -->
    <div>
      <h2 class={`mb-2 text-2xl font-bold ${accentColor}`}>
        CoderDojo Schöneweide
      </h2>
      <ul class="space-y-1 text-sm">
        <li><a href="#" class="hover:underline">Kontakt</a></li>
        <li><a href="#" class="hover:underline">Impressum</a></li>
        <li><a href="#" class="hover:underline">Datenschutzerklärung</a></li>
      </ul>
    </div>
    <!-- Middle: Navigation -->
    <div>
      <ul class="space-y-1 text-sm md:mt-0">
        <h2 class={`mb-2 text-xl font-bold ${accentColor}`}>Sitemap</h2>
        <li><a href="#" class="hover:underline">Home</a></li>
        <li><a href="#" class="hover:underline">Workshops</a></li>
        <li><a href="#" class="hover:underline">Mentoring</a></li>
        <li><a href="#" class="hover:underline">Verein</a></li>
        <li><a href="#" class="hover:underline">Blog</a></li>
      </ul>
    </div>
    <!-- Right: Social Links -->
    <div>
      <h2 class={`mb-2 text-xl font-bold ${accentColor}`}>Wir im Netz</h2>
      <ul class="space-y-1 text-sm">
        <li><a href="#" class="hover:underline">LinkedIn</a></li>
        <li><a href="#" class="hover:underline">Pretix (Tickets)</a></li>
        <li><a href="#" class="hover:underline">Facebook</a></li>
        <li><a href="#" class="hover:underline">Instagram</a></li>
        <li><a href="#" class="hover:underline">GitHub</a></li>
        <li><a href="#" class="hover:underline">YouTube</a></li>
      </ul>
    </div>
  </div>
  <div
    class={`mt-8 border-t ${borderColor} pt-4 text-center text-sm font-semibold ${textClasses}`}
  >
    Made with <span class="text-red-400">❤️</span> by the CoderDojo Schöneweide Team
  </div>
</footer>
