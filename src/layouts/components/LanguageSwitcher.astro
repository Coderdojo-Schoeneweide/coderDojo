---
const { className }: { className?: string } = Astro.props;
const languages = [
  { code: "de", label: "Deutsch", flag: "🇩🇪", href: "/de" },
  { code: "en", label: "English", flag: "🇬🇧", href: "/en" },
  { code: "ar", label: "Arabic", flag: "🇸🇦", href: "/ar" },
];
---

<div class={`relative group ${className}`}>
  <button class="flex items-center space-x-2 bg-amber-100 hover:bg-amber-200 px-3 py-1 rounded text-sm">
    <span class="text-lg">🌐</span>
    <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
      <path d="M5.25 6.75L10 11.5l4.75-4.75" />
    </svg>
  </button>
  <ul class="absolute right-0 top-full bg-white rounded shadow-lg mt-2 w-36 hidden group-hover:block transition z-50">
    {languages.map(lang => (
      <li>
        <a href={lang.href} class="block px-4 py-2 text-sm hover:bg-amber-50">
          <span>{lang.flag}</span> {lang.label}
        </a>
      </li>
    ))}
  </ul>
</div>
