---
// Simplified Footer with content integration
import { siteConfig } from '../content';
---

<footer class="bg-accent-900 py-12 text-white dark:bg-gray-900">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
            <!-- Logo & Description -->
            <div class="space-y-4">
                <div class="flex items-center space-x-3">
                    <img
                        src={siteConfig.logo.image}
                        alt={siteConfig.logo.text}
                        width={siteConfig.logo.width}
                        height={siteConfig.logo.height}
                        class="rounded-lg"
                    />
                    <span class="text-xl font-bold">
                        {siteConfig.logo.text}
                    </span>
                </div>
                <p class="text-gray-300">
                    {siteConfig.description}
                </p>
            </div>

            <!-- Quick Links -->
            <div class="space-y-4">
                <h3 class="text-lg font-semibold">Quick Links</h3>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="/workshops"
                            class="text-gray-300 transition-colors hover:text-white"
                            >Workshops</a
                        >
                    </li>
                    <li>
                        <a
                            href="/mentoring"
                            class="text-gray-300 transition-colors hover:text-white"
                            >Mentoring</a
                        >
                    </li>
                    <li>
                        <a
                            href="/kooperationen"
                            class="text-gray-300 transition-colors hover:text-white"
                            >Kooperationen</a
                        >
                    </li>
                    <li>
                        <a
                            href="/verein"
                            class="text-gray-300 transition-colors hover:text-white"
                            >Verein</a
                        >
                    </li>
                    <li>
                        <a
                            href="/spenden"
                            class="text-gray-300 transition-colors hover:text-white"
                            >Spenden</a
                        >
                    </li>
                    <li>
                        <a
                            href="/impressum"
                            class="text-gray-300 transition-colors hover:text-white"
                            >Impressum</a
                        >
                    </li>
                    <li>
                        <a
                            href="/datenschutz"
                            class="text-gray-300 transition-colors hover:text-white"
                            >Datenschutz</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Contact & Social -->
            <div class="space-y-4">
                <h3 class="text-lg font-semibold">Kontakt</h3>
                <div class="space-y-2">
                    <p class="text-gray-300">
                        <a
                            href={`mailto:${siteConfig.contact.email}`}
                            class="transition-colors hover:text-white"
                        >
                            {siteConfig.contact.email}
                        </a>
                    </p>

                    <!-- Social Links -->
                    <div class="flex space-x-4 pt-2">
                        {
                            siteConfig.contact.social.map((social) => (
                                <a
                                    href={social.url}
                                    class="text-gray-400 transition-colors hover:text-white"
                                    aria-label={social.name}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    <span class="text-sm">{social.name}</span>
                                </a>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="mt-8 border-t border-gray-800 pt-8 text-center">
            <p class="text-gray-400">
                Made with ❤️ by the
                {siteConfig.title} Team
            </p>
        </div>
    </div>
</footer>
