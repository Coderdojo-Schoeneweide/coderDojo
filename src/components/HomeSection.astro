---
interface Props {
  /**
   * The unique identifier of the section.
   */
  id: string;
  /**
   * The section heading.
   */
  title: string;
  /**
   * The color scheme to use for text and background.
   */
  colorScheme: 'light' | 'dark';
}

const { id, title, colorScheme } = Astro.props;
---

<section class=`${colorScheme} px-content py-8` id={id}>
  <h2>{title}</h2>
  <div class="flex flex-col gap-10 sm:flex-row">
    <div class="sm:w-1/2">
      <slot name="start" />
    </div>
    <div class="sm:w-1/2">
      <slot name="end" />
    </div>
  </div>
</section>
