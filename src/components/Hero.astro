---
// Universal Hero Component
// Handles hero sections for all pages
interface Props {
  hero: {
    title: string;
    subtitle?: string;
    background: 'light' | 'dark' | 'accent';
    buttons?: Array<{
      label: string;
      url: string;
      style?: 'primary' | 'secondary' | 'outline';
      external?: boolean;
    }>;
  };
}

const { hero } = Astro.props;
---

<section
  class={`py-24 lg:py-32 overflow-hidden ${
    hero.background === 'dark' ? 'bg-accent-900 dark:bg-gray-800 text-white'
    : hero.background === 'accent' ?
      'bg-secondary-500 dark:bg-secondary-700 text-white'
    : 'bg-secondary-500 dark:bg-secondary-700 text-white'
  }`}
>
  <div class="container mx-auto px-6">
    <div class="mx-auto max-w-4xl text-center">
      <h1
        class="mb-6 text-3xl font-bold break-words hyphens-auto sm:text-4xl md:text-5xl lg:text-6xl"
      >
        {hero.title}
      </h1>

      {
        hero.subtitle && (
          <p class="mb-8 text-xl text-slate-600 lg:text-2xl dark:text-slate-300">
            {hero.subtitle}
          </p>
        )
      }

      <div class="prose prose-lg dark:prose-invert mx-auto mb-10 max-w-none">
        <slot />
      </div>

      <!-- Buttons -->
      {
        hero.buttons && hero.buttons.length > 0 && (
          <div class="flex flex-wrap justify-center gap-4">
            {hero.buttons.map((button) => (
              <a
                href={button.url}
                target={button.external ? '_blank' : '_self'}
                rel={button.external ? 'noopener noreferrer' : undefined}
                class={`rounded-lg px-6 py-3 font-semibold transition-colors ${
                  button.style === 'primary' ?
                    'bg-primary-600 hover:bg-primary-700 text-white'
                  : button.style === 'secondary' ?
                    'bg-slate-600 text-white hover:bg-slate-700'
                  : 'border-2 border-current text-current hover:bg-white/20'
                }`}
              >
                {button.label}
              </a>
            ))}
          </div>
        )
      }
    </div>
  </div>
</section>
