---
// Universal Hero Component
// Handles hero sections for all pages
interface Props {
  hero: {
    title: string;
    subtitle?: string;
    content?: string[];
    primaryButton?: { text: string; url: string; external?: boolean };
    secondaryButton?: { text: string; url: string; external?: boolean };
    buttons?: Array<{
      text: string;
      url: string;
      style: 'primary' | 'secondary' | 'outline';
    }>;
    background: 'light' | 'dark' | 'accent';
  };
}

const { hero } = Astro.props;
---

<section
  class={`py-24 lg:py-32 ${
    hero.background === 'dark' ? 'bg-accent-900 dark:bg-gray-800 text-white'
    : hero.background === 'accent' ?
      'bg-secondary-500 dark:bg-secondary-700 text-white'
    : 'bg-secondary-500 dark:bg-secondary-700 text-white'
  }`}
>
  <div class="container mx-auto px-6">
    <div class="mx-auto max-w-4xl text-center">
      <h1 class="mb-6 text-5xl font-bold lg:text-6xl">
        {hero.title}
      </h1>

      {
        hero.subtitle && (
          <p class="mb-8 text-xl text-slate-600 lg:text-2xl dark:text-slate-300">
            {hero.subtitle}
          </p>
        )
      }

      <div class="mb-10 space-y-6 text-lg">
        <slot />
        {
          hero.content?.map((paragraph) => (
            <div class="text-lg" set:html={paragraph} />
          ))
        }
      </div>

      <!-- Primary/Secondary buttons (homepage style) -->
      {
        (hero.primaryButton || hero.secondaryButton) && (
          <div class="flex flex-col justify-center gap-4 sm:flex-row">
            {hero.primaryButton && (
              <a
                href={hero.primaryButton.url}
                target={hero.primaryButton.external ? '_blank' : '_self'}
                class="bg-primary-600 hover:bg-primary-700 rounded-lg px-8 py-4 font-semibold text-white transition-colors"
              >
                {hero.primaryButton.text}
              </a>
            )}
            {hero.secondaryButton && (
              <a
                href={hero.secondaryButton.url}
                target={hero.secondaryButton.external ? '_blank' : '_self'}
                class="bg-primary-600 hover:bg-secondary-700 rounded-lg px-8 py-4 font-semibold text-white transition-colors"
              >
                {hero.secondaryButton.text}
              </a>
            )}
          </div>
        )
      }

      <!-- Multiple buttons (other pages style) -->
      {
        hero.buttons && (
          <div class="flex flex-wrap justify-center gap-4">
            {hero.buttons.map((button) => (
              <a
                href={button.url}
                class={`rounded-lg px-6 py-3 font-semibold transition-colors ${
                  button.style === 'primary' ?
                    'bg-primary-600 hover:bg-primary-700 text-white'
                  : button.style === 'secondary' ?
                    'bg-slate-600 text-white hover:bg-slate-700'
                  : 'border-2 border-current text-current hover:bg-current hover:text-white'
                }`}
              >
                {button.text}
              </a>
            ))}
          </div>
        )
      }
    </div>
  </div>
</section>
