---
import type { HeroData } from "@/types/index";
import Button from "@/components/ui/Button.astro";

export interface Props extends HeroData {}

const { title, subtitle, primaryButton, secondaryButton } = Astro.props;
---

<section
    class="relative flex min-h-[70vh] items-center justify-center bg-gradient-to-br from-orange-100 via-white to-orange-200 dark:from-[#23212b] dark:via-[#2d2a38] dark:to-[#463d5c] px-4"
>
    <div
        class="relative z-10 mx-auto flex w-full max-w-6xl flex-col items-center justify-center gap-8"
    >
        <!-- Banner -->
        <div class="flex flex-col items-center w-full">
            <div class="hero-banner animate-fade-in-up">
                <h1
                    class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-white drop-shadow-lg text-center mb-2 tracking-tight"
                >
                    {title}
                </h1>
                <p
                    class="text-lg md:text-xl font-semibold text-orange-100 text-center mb-2 tracking-wide"
                >
                    {subtitle}
                </p>
            </div>

            <!-- Buttons Row -->
            <div class="flex gap-4 mt-6 flex-wrap justify-center">
                {
                    primaryButton && (
                        <Button
                            variant="primary"
                            href={primaryButton.href}
                            target={primaryButton.target}
                        >
                            {primaryButton.text}
                        </Button>
                    )
                }

                {
                    secondaryButton && (
                        <Button variant="secondary" href={secondaryButton.href}>
                            {secondaryButton.text}
                        </Button>
                    )
                }
            </div>
        </div>
    </div>
</section>
